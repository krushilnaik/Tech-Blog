<div class="flex flex-col border-4 border-gray-800 text-lg">
	<h3 class="bg-gray-800 text-green-100 text-2xl p-2">
		Sign Up
	</h3>
	<form id="signup-form" class="grid gap-4 p-3">
		<label for="username-signup">
			Username
		</label>
		<input id="username-signup" type="text" />
		<label for="password-signup">
			Password
		</label>
		<input id="password-signup" type="password" class="form-input" />
		<button
			type="submit"
			class="block bg-gray-500 p-3 text-gray-200 rounded-md my-2"
		>
			Signup!
		</button>
		<a class="text-blue-500" href="/login">
			Log in instead
		</a>
	</form>
</div>
<!-- javascript file-->
