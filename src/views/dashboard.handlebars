<section>
	<h2>Your Posts</h2>
	<div class="flex flex-col gap-2">
		{{#each posts as |post|}}
			{{> dashboard-postinfo post}}
		{{else}}
			<span>You have no posts</span>
		{{/each}}
	</div>
</section>

<button type="submit" class="bg-gray-800 text-gray-200 p-3 rounded-lg absolute bottom-14 left-1/2"><a class="link" href="/dashboard/new">+ New Post</a></button>

<script src="/assets/js/add-post.js"></script>
